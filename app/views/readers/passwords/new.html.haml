.section.section--golden.devise
  .section__content.devise__content{style: "color: white; text-align: left"}
    = image_tag('logo-white.png', class: "logo-default", style: "height: auto")
    %br
    %br
    %p Digite seu email cadastrado na plataforma e enviaremos um email de confirmação para alteração da senha

    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), defaults: { input_html: {class: "fancy-form__input", style: "background-color: transparent; border-color: white;"} }, html: {style: "width: 100%;max-width: 500px", method: :post}) do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, label: "E-mail"
      .form-actions.advanced-inline
        = f.submit "Enviar instruções", class: "button button--dark-yellow"

      %br
      	
      .advanced-inline
        = render "readers/shared/links"
