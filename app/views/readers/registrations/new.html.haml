.section.section--golden.devise
  .section__content.devise__content{style: "color: white; text-align: left"}
    = image_tag('logo-white.png', class: "logo-default", style: "height: auto")
    %br
    %br
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { input_html: {class: "fancy-form__input", style: "background-color: transparent; border-color: white;"} }, html: {style: "width: 100%;max-width: 500px"}) do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, label: "E-mail"
        = f.input :password, required: false, input_html: { autocomplete: "new-password", class: "fancy-form__input", style: "background-color: transparent; border-color: white;margin-bottom: 0" }, label: "Senha"
        %small= "mínimo #{@minimum_password_length} caractéres" if @minimum_password_length
        %br
        %br
        = f.input :password_confirmation, required: false, input_html: { autocomplete: "new-password" }, label: "Confirmar Senha"
        = f.input :sign_up_code, label: "Código de autenticação"
        = f.input :school_id, as: :hidden, input_html: { value: "1" }
      .form-actions.advanced-inline
        = f.submit "Autenticar minha conta", class: "button button--green fancy-link--white"
      %br


    = render "readers/shared/links"
