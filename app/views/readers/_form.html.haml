-# frozen_string_literal: true
= simple_form_for(@reader) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :classy
    = f.input :groupy
    = f.input :birthday
    = f.association :school

  .form-actions
    = f.button :submit
