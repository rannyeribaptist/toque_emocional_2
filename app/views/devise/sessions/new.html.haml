.devise
  .devise__background
    = image_tag("logo.png")
  .devise__content
    %div
      %h1.title.title--thin.title--large Entrar
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: {class: "fancy-form__input"} }) do |f|
        .form-inputs
          = f.input :email,
            required: false,
            autofocus: true,
            input_html: { autocomplete: "email" }
          = f.input :password,
            required: false,
            input_html: { autocomplete: "current-password" }
          = f.input :remember_me, input_html: {style: "display: flex", class: "fancy-form__checkbox"}, as: :boolean if devise_mapping.rememberable?
        .form-actions
          = f.submit "Entrar", class: "button button--yellow"

      %br
      = render "devise/shared/links"
