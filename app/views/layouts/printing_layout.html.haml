!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Toque Emocional

    = csrf_meta_tags
    = csp_meta_tag

    -# Css animations
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css", :rel => "stylesheet"}/

    -# Montserrat Font
    %link{:href => "https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i", :rel => "stylesheet"}/

    -# Responsive metatag
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/

    = stylesheet_link_tag    'theme', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag    'print', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

    -# Tiny.cloud API Key
    %script{:src => "https://cloud.tinymce.com/5/tinymce.min.js?apiKey=la5crl899wu2ts6q2xcd82yob6ousrg163t4as4lt51so7xl"}

  %body
    .section
      .section__content
        = link_to icon('fas', 'arrow-left', "Voltar"), :back, class: "fancy-link no-print", style: "float: left"

        %div{style: "margin-top: 50px"}

        = yield

    :javascript
      setTimeout(function(){
        $(".flash").removeClass("animated fadeInDown");
        $(".flash").addClass("animated fadeOutUp");
      }, 5000);

    = yield(:javascript)
