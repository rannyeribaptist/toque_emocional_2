@import "variables";

.description-card {
	background-repeat: no-repeat;
	width: 300px;
	height: 300px;

	&--1 { background-image: url("<%= asset_path('Lilyan.png') %>") }
	&--2 { background-image: url("<%= asset_path('Ellyson.png') %>") }

	&__content {
		visibility: hidden;
		background-color: rgba(0,0,0,0.5);
		color: white;
		width: 300px;
		height: 300px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		font-weight: bold;

		&--active { visibility: visible }
	}

	&:first-of-type {
		@include breakpoint("small-up") {
			margin-right: 100px;
		}
	}
}
